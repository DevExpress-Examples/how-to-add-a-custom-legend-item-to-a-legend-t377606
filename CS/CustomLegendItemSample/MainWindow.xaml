<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomLegendItemSample"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" x:Class="CustomLegendItemSample.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="391" Width="648">
	<!--region #MarkerTemplate-->
	<Window.Resources>
        <DataTemplate x:Key="markerTemplate">
            <Image Source="Images/DXLogo.png"/>
        </DataTemplate>
    </Window.Resources>
    <!--endregion #MarkerTemplate-->
	<Grid>
        <dxc:ChartControl HorizontalAlignment="Left" VerticalAlignment="Top">
            <dxc:ChartControl.Palette>
                <dxc:Office2013Palette/>
            </dxc:ChartControl.Palette>
            <!--region #CustomItems-->
            <dxc:ChartControl.Legend>
                <dxc:Legend ItemVisibilityMode="AutoGeneratedAndCustom">
                    <dxc:Legend.CustomItems>
                        <dxc:CustomLegendItem MarkerBrush="#FFFF8000" 
                                              MarkerTemplate="{Binding Source={StaticResource markerTemplate}}" 
                                              Text="Powered by DevExpress"/>
                    </dxc:Legend.CustomItems>
                </dxc:Legend>
            </dxc:ChartControl.Legend>
            <!--endregion #CustomItems-->
            <dxc:SimpleDiagram2D>
                <dxc:PieSeries2D LegendTextPattern="{}{A}: {VP:P0}">
                    <dxc:PieSeries2D.Model>
                        <dxc:BorderlessFlatPie2DModel/>
                    </dxc:PieSeries2D.Model>
                    <dxc:PieSeries2D.Points>
                        <dxc:SeriesPoint Argument="USA" Value="9.63142" />
                        <dxc:SeriesPoint Argument="Canada" Value="9.98467" />
                        <dxc:SeriesPoint Argument="Russia" Value="17.0752" />
                        <dxc:SeriesPoint Argument="Others" Value="81.2" />
                        <dxc:SeriesPoint Argument="India" Value="3.28759" />
                        <dxc:SeriesPoint Argument="Australia" Value="7.68685" />
                        <dxc:SeriesPoint Argument="Brazil" Value="8.511965" />
                        <dxc:SeriesPoint Argument="China" Value="9.59696" />
                    </dxc:PieSeries2D.Points>
                </dxc:PieSeries2D>
            </dxc:SimpleDiagram2D>
        </dxc:ChartControl>

    </Grid>
</Window>
